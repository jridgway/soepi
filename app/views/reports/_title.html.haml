- content_for :title do 
  = @report.title
  
- content_for :body_content_title do
  = avatar(@report.member, 20)
  = link_to @report.member.nickname, member_path(@report.member)
  \/
  %strong= link_to @report.title, report_path(@report)
  %ul.attributes
    %li Status: #{@report.state_human}
    - if @report.r_script
      %li 
        Generated by R script: #{link_to @report.r_script.member.nickname, member_path(@report.r_script.member)} 
        \/ 
        #{link_to @report.r_script.title, r_script_path(@report.r_script)}
    %li 
      Posted: #{timeago @report.created_at}
    - unless @report.tags.empty?
      %li Tagged: #{tag_list_links(@report)}