- content_for :body_content do
  %section[@page]
    #pages-sidebar
      - cache "pages_index", :expires_in => 15.minutes do
        #pages-index.pop-nav
          %a#pages-index-button.pop-nav-link{:href => '/support'}
            Pages Index
            %span.ui-icon.ui-icon-carat-2-n-s.ui-button-icon-primary &nbsp;
          #pages-index-panel.pop-nav-inner
            .inner
              %ol
                - Page.published.order('lft').each do |page|
                  %li{:class => "depth-#{page.depth}"}
                    = link_to page.title, page_path(page), :style => "padding-left: #{(page.depth.to_i + 1) * 15}px;"
      #toc{:style => 'display:none'}
        %strong Table of Contents
        %ul.inner
    %small.path= page_path_linked(@page)
    %h1= @page.body_title
    - if @page.raw?
      = link_member_references(@page.body).html_safe
    - else
      = link_member_references(RDiscount.new(@page.body).to_html).html_safe
    %p 
      %small Page last updated #{timeago @page.updated_at}
  
- content_for :javascript do 
  = raw @page.javascript

- content_for :css do 
  = raw @page.css

    
= render :partial => "/shared/content_page"
