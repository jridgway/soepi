- content_for :body_content_title do
  Subscribe to Our Newsletter

- content_for :body_content_left do
  = simple_form_for :subscriber, :action => new_subscriber_path, :method => 'post' do |f|
    = f.input :email
    = f.input :first_name, :required => false
    = f.input :last_name, :required => false
    = f.input :unsubscribe, :as => :boolean
    .actions
      = f.submit 'Submit', :class => 'button'

- content_for :body_content_right do 
  - if Part.set?(:home_member_top_right)
    .highlight
      = link_member_references(RDiscount.new(Part.find_or_set(:home_member_top_right)).to_html).html_safe
    
= render :partial => "/shared/content_page"
