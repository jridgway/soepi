%head
  %meta{:charset => 'utf-8'}/
  %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
  %title= browser_title(yield(:title))
  %meta{:name => 'description', :content => meta_description(yield(:meta_description))} 
  %meta{:name => 'keywords', :content => meta_keywords(yield(:meta_keywords))}
  - if @facebook_meta    
    %meta{:property => "og:url", :content => @facebook_meta[:url]}/
    %meta{:property => "og:title", :content => @facebook_meta[:title]}/
    %meta{:name => 'description', :content => @facebook_meta[:description]}
    %meta{:property => "og:image", :content => @facebook_meta[:image_url]}/
    %meta{:property => "og:type", :content => @facebook_meta[:type]}/
  = csrf_meta_tags
  = stylesheet_link_tag 'screen', :media => 'screen'
  = stylesheet_link_tag 'print', :media => 'print'
  = javascript_tag %{var controller_name = '#{controller_name}'; var action_name = '#{action_name}';}
  = javascript_tag %{var homepage = #{request.path == root_path};}
  /[if lt IE 9]
    %script{:src => 'https://html5shiv.googlecode.com/svn/trunk/html5.js'}
  %script{:src => 'https://maps.google.com/maps/api/js?sensor=false'}
  = javascript_include_tag 'application'
  = esi_render :partial => '/members/accounts/load_current_member.js'
  %link{:rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon"}
  - if (page_code = Setting.find_or_set(:analytics_page_code, 'UA-xxxxxx-x').to_s.strip) =~ /^(UA-xxxxxx-x)?$/
    = render :template => '/shared/_analytics.js.erb', :locals => {:page_code => page_code}
  = javascript_tag yield(:javascript)
  %style{:type => 'text/css'} 
    = yield(:css)