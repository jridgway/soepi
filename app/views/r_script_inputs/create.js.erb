<% if @r_script.inputs.empty? %>
  $('#none-defined').show();
<% else %>
  $('#none-defined').hide();
<% end %>
<% if @r_script_input.valid? %>
  $('#input-dialog').remove();
  $('#inputs ul').append('<%= escape_javascript render(:template => 'r_script_inputs/_show.html.haml', :locals => {:input => @r_script_input, :r_script => @r_script}) %>');
  $('#r_script_input_<%= @r_script_input.id %>').show('slide')
<% else %>
  $('#input-dialog').html('<%= escape_javascript render(:template => 'r_script_inputs/new.html.haml') %>');
  init_form_tips();
  init_form_errors($('#input-dialog .input'));
<% end %>
$('.error2').qtip('destroy');
init_common_elements();