- content_for :body_content_title do
  Members

- content_for :body_content_details do
  %ul.menu
    %li
      = link_to 'All', members_path
    %li
      = link_to 'Publishers', publishers_members_path
    - if action_name == 'by_tag'
      %li
        = link_to %{Tagged "#{@tag}"}, request.path
      
- content_for :body_content_left do
  - if @members.empty?
    %p No members found.
  - else
    %ul#members.listing.reset
      - @members.each do |member|
        %li
          = render :partial => '/members/member', :locals => {:member => member}
    = will_paginate @members     
  
= render :partial => "/shared/content_page"