#run-results{:title => 'Results'}
  - if @report
    - if @report.drafting? 
      #results-actions
        = link_to 'Report these Results', edit_report_path(@report), :class => 'button'
        = link_to 'Delete these Results', report_path(@report), :method => 'delete', :remote => true, :class => 'button'
      #plots
        %h3 Plots
        %ul.reset
          - @report.plots.each do |plot|
            %li
              = link_to image_tag(plot.plot.thumb('250x250#').url(:format => :png)), plot.plot.url(:format => :png), :target => '_blank' 
      #output
        %h3 Output
        = simple_format @report.output
    - elsif @report.pending?
      %h3 
        We are running your R script. This could take a minute. Please wait. 
      %p
        = image_tag 'ajax-loader.gif', :class => 'ajax-loader'
  - else
    %h3 
      We are starting your own R server. This could take a minute. Please wait.
    %p
      = image_tag 'ajax-loader.gif', :class => 'ajax-loader'
      
  