$('#please-wait').remove();
<% if @report %>
  $('#run-results').remove();
  $('body').append("<%= escape_javascript(render(:partial => 'results')) %>");
  <% if @report.drafting? %>
    $('#run-results').dialog({width:900, height:600, modal:true, zIndex:9, resizable:false})
    $('.tabs').tabs();
    init_common_elements();
  <% else %>
    $('#run-results').dialog({width:625, height:200, modal:true, zIndex:9, resizable:false})
    setTimeout("check_ec2(<%= @report.id %>)", 5000);
  <% end %>
<% else %>
  if($('#run-results').length == 0) {
    $('body').append("<%= escape_javascript(render(:partial => 'results')) %>");
    $('#run-results').dialog({width:670, height:200, modal:true, zIndex:9, resizable:false}).show('blind');
  }
  setTimeout("check_ec2()", 5000);
<% end %>
