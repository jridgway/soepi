%ul#search-results.listing
  - @results.each_hit_with_result do |hit, result|
    %li
      - case result.class.to_s when 'Survey' then
        = render :partial => '/surveys/survey', :locals => {:survey => result}
      - when 'Chart' then
        = render :partial => '/charts/chart', :locals => {:chart => result}
      - when 'Petition' then
        = render :partial => '/petitions/petition', :locals => {:petition => result}        
      - when 'Member' then
        = render :partial => '/members/member', :locals => {:member => result} 
      - when 'Page' then 
        = render :partial => '/pages/page', :locals => {:page => result} 
= paginate @results