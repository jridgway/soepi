<% content_for :body_content_title do %>
  <%= @petition.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @petition.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @petition.description %>
    </p>
  </section>
  <section>
    <h1>Member</h1>
    <p>
      <%=raw @petition.member_id %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="petitions">
      <% @petitions.each do |petition| %>
        <li>
          <%= link_to petition.title, petition_url(petition) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
