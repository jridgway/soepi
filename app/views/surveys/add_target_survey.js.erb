if($('#target-surveys #survey_<%= @survey.id %>').length == 0) {
  $('#target-surveys').append('<%= escape_javascript render(:template => '/surveys/_target_survey.html.haml', :locals => {:survey => @survey}) %>');
} else if($('#survey_target_attributes_survey_ids_<%= @survey.id %>').val() == '') {
  $('#survey_target_attributes_survey_ids_<%= @survey.id %>').val(<%= @survey.id %>);
  $('#survey_target_attributes_survey_ids_<%= @survey.id %>').closest('li').show();
}